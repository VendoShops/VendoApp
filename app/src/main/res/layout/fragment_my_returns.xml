<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main"
    tools:context=".ui.profile.myreturns.MyReturnsFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSubmit">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/back"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/dmsanssemibold"
            android:text="@string/my_returns"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivBack" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="18dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="14dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemsOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/ivBack">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="78dp"
                android:layout_height="97dp"
                app:cardCornerRadius="4dp"
                app:strokeWidth="0dp"
                android:id="@+id/cardItem"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/ivItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/testorder"
                android:scaleType="centerCrop" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/dmsanssemibold"
                android:text="@string/women_manfi_fashion_fashinon_fashion_fash"
                android:textSize="12sp"
                android:layout_marginStart="22dp"
                app:layout_constraintStart_toEndOf="@id/cardItem"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardItem" />

            <TextView
                android:id="@+id/tvItemColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_9f"
                android:fontFamily="@font/dmsansregular"
                android:text="@string/brown_l"
                android:textSize="10sp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/cardItem"
                app:layout_constraintTop_toBottomOf="@id/tvItemName" />

            <TextView
                android:id="@+id/tvItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_9f"
                android:fontFamily="@font/dmsansregular"
                android:text="@string/_1_item"
                android:textSize="10sp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/cardItem"
                app:layout_constraintTop_toBottomOf="@id/tvItemColor" />

            <TextView
                android:id="@+id/tvItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/dmsanssemibold"
                android:text="$9"
                android:textSize="14sp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toEndOf="@id/cardItem"
                app:layout_constraintBottom_toBottomOf="@id/cardItem"
                app:layout_constraintTop_toBottomOf="@id/tvItemCount" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvIadeNedeni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/dmsanssemibold"
            android:text="@string/reason_for_return"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/itemsOrder" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/iadeNedeniInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/choose_a_return_reason"
            android:padding="0dp"
            android:layout_marginTop="23dp"
            app:endIconMode="dropdown_menu"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/tvIadeNedeni">

        <AutoCompleteTextView
            android:id="@+id/iadeNedeniDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="14sp"
            android:background="@android:color/transparent" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvAddPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/dmsanssemibold"
            android:text="@string/add_photo"
            android:textSize="14sp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/iadeNedeniInputLayout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMyReturnsPhotosRecycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvAddPhoto"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:listitem="@layout/item_returns_photos"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="13dp" />

        <TextView
            android:id="@+id/tvMax3photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_3_photos"
            app:layout_constraintStart_toStartOf="@id/guideline"
            android:textSize="10sp"
            android:textColor="@color/grey_9f"
            android:fontFamily="@font/dmsansregular"
            app:layout_constraintTop_toBottomOf="@id/rvMyReturnsPhotosRecycler"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvYourReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/dmsanssemibold"
            android:text="@string/your_review"
            android:textSize="14sp"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvMax3photos" />

        <EditText
            android:id="@+id/reviewInput"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:hint="@string/your_review_is_very_important_for_us"
            android:gravity="top|start"
            android:padding="12dp"
            android:textColorHint="@color/grey_9f"
            android:textColor="@color/black"
            android:background="@drawable/rounded_border_background"
            app:layout_constraintTop_toBottomOf="@id/tvYourReview"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            android:layout_marginTop="23dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:backgroundTint="@color/black"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/nestedScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>