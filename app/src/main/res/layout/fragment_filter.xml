<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/back"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/filter"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutGenderHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gender"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivGenderArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/expand"
                android:src="@drawable/more_icon_svg" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutGenderOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="12dp"
                app:chipSpacingVertical="12dp"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_size_button"
                    android:text="@string/man" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_size_button"
                    android:text="@string/woman" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipChild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_size_button"
                    android:text="@string/child" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#E5E7EB" />

        <LinearLayout
            android:id="@+id/layoutCategoriesHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/categories"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivCategoriesArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Expand"
                android:src="@drawable/more_icon_svg" />

        </LinearLayout>

        <!-- Category Options -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:chipSpacingHorizontal="12dp"
            app:chipSpacingVertical="12dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAccessories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="@string/accessories" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipClothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="@string/clothing" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBeauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="@string/beauty" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipElectronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="@string/electronics" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#E5E7EB" />

        <LinearLayout
            android:id="@+id/layoutSizeHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/size"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivSizeArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/expand"
                android:src="@drawable/more_icon_svg" />

        </LinearLayout>

        <!-- Size Options -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSizes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:chipSpacingHorizontal="12dp"
            app:chipSpacingVertical="12dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipXS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="XS" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="S" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="M" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="L" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipXL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="XL" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#E5E7EB" />

        <LinearLayout
            android:id="@+id/layoutBrandHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/brand"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivBrandArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/expand"
                android:src="@drawable/more_icon_svg" />

        </LinearLayout>

        <!-- Brand Options -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupBrands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:chipSpacingHorizontal="12dp"
            app:chipSpacingVertical="12dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipNike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="Nike" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAdidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="Adidas" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPuma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="Puma" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipZara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_size_button"
                android:text="Zara" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#E5E7EB" />

        <LinearLayout
            android:id="@+id/layoutColorHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/color"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivColorArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/expand"
                android:src="@drawable/more_icon_svg" />

        </LinearLayout>

        <!-- Color Options -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewColors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#E5E7EB" />

        <LinearLayout
            android:id="@+id/layoutPriceHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/price"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivPriceArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/expand"
                android:src="@drawable/more_icon_svg" />

        </LinearLayout>

        <!-- Price Options -->
        <LinearLayout
            android:id="@+id/layoutPriceOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Min and Max Price Input Fields -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Min Price Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:hint="min"
                    app:boxStrokeColor="#D1D5DB"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="#6B7280">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMinPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Max Price Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:hint="max"
                    app:boxStrokeColor="#D1D5DB"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="#6B7280">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMaxPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Price Range Slider -->
            <com.google.android.material.slider.RangeSlider
                android:id="@+id/priceRangeSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="20000"
                app:labelBehavior="gone"
                app:thumbColor="#000000"
                app:trackColorActive="#000000"
                app:trackColorInactive="#D1D5DB" />

            <!-- Price Labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMinPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$0"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvMaxPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$20000"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Spacer to push button to bottom when needed -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Apply Filter Button - Initially Hidden -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApplyFilter"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:backgroundTint="@android:color/black"
            android:text="@string/apply_filter"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:cornerRadius="12dp" />

    </LinearLayout>

</ScrollView>